<header>
	<span>Stars</span>
	<ul id="menu">
		<li><a href="/planets">Planets</a></li>
		<li><a href="/moons">Moons</a></li>
		<li><a href="/elements">Elements</a></li>
	</ul>
</header>
<main>
	<button id="add-item-button">Add A New Star</button>
	<table>
		<tr>
		<th></th>
		<th>Name</th>
		<th>System</th>
		<th>Type</th>
		<th>Age</th>
		</tr>
	  {{#each stars}}
	  <tr>
		<td><img src="/static/stars/{{name}}.jpg" alt="{{name}}" style="width:auto;height:150px;"></td>
		<td>{{name}}</td>
		<td>{{system}}</td>
		<td>{{type}}</td>
		<td>{{#if age}}{{age}}{{else}}Unknown{{/if}}</td>
		<td><button type="button" onclick="deleteStar({{id}})" class="delete-button">Delete</button><button type="button"class="update-button"><a href="/{{id}}">Update</a></button></td>
	  </tr>
	  {{/each}}
	</table>

	<div id="form-box" class="hidden">
		<form class="add-item-form" action="/" method="post">
			<div id="form-header">
				<span>Add Star</span>
			</div>
			Name: <input type="text" name="name"><br>
			System: <input type="text" name="system"><br>
			Type: <input type="text" name="type"><br>
			Age: <input type="number" name="age"><br>
			<input type="submit" value="Add Star">
			<input type="submit" id="form-cancel" value="Cancel"
		</form>
	</div>
</main>
