<header>
	<span>Moons</span>
	<ul id="menu">
		<li><a href="/">Stars</a></li>
		<li><a href="/planets">Planets</a></li>
		<li><a href="/elements">Elements</a></li>
	</ul>
</header>
<main>
	<button id="add-item-button">Add A New Moon</button>
	<table>
		<tr>
			<th></th>
			<th>Name</th>
			<th>Planet</th>
			<th>Diameter</th>
		</tr>
		{{#each moons}}
		<tr>
			<td><img src="/static/moons/{{moon_name}}.jpg" alt="{{moon_name}}" style="width:auto;height:150px;"></td>
			<td>{{moon_name}}</td>
			<td>{{#if planet_name}}{{planet_name}}{{else}}None{{/if}}</td>
			<td>{{#if diameter}}{{diameter}} mi{{else}}Unknown{{/if}}</td>
			<td><button type="button" onclick="deleteMoon({{id}})" class="delete-button">Delete</button><button type="button"class="update-button"><a href="/moons/{{id}}">Update</a></button></td>
		</tr>
		{{/each}}
	</table>

	<div id="form-box" class="hidden">
		<form class="add-item-form" action="/moons" method="post">
			<div id="form-header">
			<span>Add Moon</span>
			</div>
			Name: <input type="text" name="name"><br>
			Planet Orbited: <input type="text" name="planet_orbiting"><br>
			Diameter: <input type="number" name="diameter"><br>
			<input type="submit" value="Add Moon">
			<input type="submit" id="form-cancel" value="Cancel"
		</form>
	</div>
</main>
